<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:NewBarcodeScanner.Converters"
             x:Class="NewBarcodeScanner.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Define basic colors -->
            <Color x:Key="PrimaryColor">#2196F3</Color>
            <Color x:Key="AccentColor">#FF9800</Color>

            <!-- Converters -->
            <converters:StringNotEmptyToBoolConverter x:Key="StringNotEmptyToBoolConverter"/>
            <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
